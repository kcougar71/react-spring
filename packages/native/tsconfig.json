{
  "include": ["src"],
  "compilerOptions": {
    "target": "es2017",
    "moduleResolution": "node",
    "lib": ["es2017"],
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "shared": ["node_modules/@react-spring/shared/src/index"],
      "shared/*": ["node_modules/@react-spring/shared/src/*"]
    },
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  }
}
