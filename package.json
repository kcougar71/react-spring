{
  "name": "@react-spring/lerna",
  "private": true,
  "description": "Cross-platform animation engine",
  "keywords": [
    "animated",
    "animation",
    "hooks",
    "motion",
    "react",
    "react-native",
    "spring",
    "typescript",
    "velocity"
  ],
  "homepage": "https://github.com/react-spring/react-spring#readme",
  "bugs": {
    "url": "https://github.com/react-spring/react-spring/issues"
  },
  "license": "MIT",
  "author": "Paul Henschel",
  "contributors": [
    "Alec Larson (https://github.com/aleclarson)"
  ],
  "sideEffects": false,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@react-spring/*",
      "**/three",
      "**/react-three-fiber",
      "**/konva",
      "**/react-konva",
      "**/react-native",
      "**/@types/react-native",
      "**/react-testing-library",
      "**/react-dom",
      "**/shared"
    ]
  },
  "scripts": {
    "build": "lerna run --parallel build",
    "clean": "lerna exec --parallel --no-bail -- rimraf dist",
    "prepare": "node ./scripts/prepare.js && yarn build",
    "version": "lerna version -m 'chore: ship it ðŸš€'",
    "release": "yarn test:ts && lerna publish from-package --contents dist",
    "test": "jest",
    "test:cov": "jest --watch",
    "test:dev": "jest --watch --no-coverage",
    "test:ts": "lerna exec --no-bail -- tsc -p . --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/*/src/**/*"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "json",
      "html",
      "text"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "test.(js|ts|tsx)$"
  },
  "dependencies": {
    "@babel/runtime": "^7.3.1",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/plugin-proposal-class-properties": "7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "7.3.2",
    "@babel/plugin-transform-modules-commonjs": "7.4.4",
    "@babel/plugin-transform-runtime": "7.4.4",
    "@babel/preset-env": "7.3.1",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "7.1.0",
    "@types/jest": "~24.0.0",
    "@types/react": "~16.8.0",
    "babel-jest": "24.8.0",
    "fs-extra": "7.0.1",
    "husky": "1.3.1",
    "jest": "24.1.0",
    "lerna": "3.14.1",
    "mock-raf": "1.0.1",
    "prettier": "1.17.1",
    "pretty-quick": "1.10.0",
    "rimraf": "2.6.3",
    "rollup": "1.12.4",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-dts": "0.15.1",
    "rollup-plugin-node-resolve": "4.0.0",
    "rollup-plugin-size-snapshot": "0.8.0",
    "rollup-plugin-terser": "5.0.0",
    "rollup-plugin-typescript2": "0.21.1",
    "sort-package-json": "1.22.1",
    "spec.ts": "1.1.3",
    "typescript": "3.5.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/react-spring"
  }
}
